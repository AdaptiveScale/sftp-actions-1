{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "SFTPPut Action Properties",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Host",
          "name": "host"
        },
        {
          "widget-type": "textbox",
          "label": "Port",
          "name": "port"
        },
        {
          "widget-type": "textbox",
          "label": "User name",
          "name": "userName"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        },
        {
          "widget-type": "textbox",
          "label": "Source Path",
          "name": "srcPath"
        },
        {
          "widget-type": "textbox",
          "label": "Destination directory",
          "name": "destDirectory"
        },
        {
          "widget-type": "textbox",
          "label": "Regex to match files that needs to be copied",
          "name" : "fileNameRegex"
        },
        {
          "widget-type": "keyvalue",
          "label": "Properties for SSH",
          "name": "sshProperties",
          "widget-attributes": {
            "showDelimiter": "false",
            "key-placeholder": "key",
            "value-placeholder": "value"
          }
        }
      ]
    }
  ],
  "outputs": [
  ]
